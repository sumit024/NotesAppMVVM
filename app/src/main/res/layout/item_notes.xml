<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/rowLayout"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#707070"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4"
                >
                <TextView
                    android:id="@+id/notesTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:maxLines="1"
                    android:layout_weight="4"
                    android:textStyle="bold"
                    />
                <View
                    android:id="@+id/notePriority"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/red_dot"
                    android:layout_gravity="end"
                    android:layout_margin="10dp"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/notesSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="qwertyuiopasdfghjklzxcvbnmkjhgfdsapoiuytrewqnbvcxz78956123qwertysdfjklzxcvbnm7418596"
                android:layout_marginTop="5dp"
                android:textColor="#D8D8D8"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/notesDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="17 Sept, 2021"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:maxLines="1"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>